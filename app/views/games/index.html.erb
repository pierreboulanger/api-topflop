<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>Opponent name</th>
      <th>Date</th>
      <th>Score</th>
      <th>Top</th>
      <th>Flop</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.team %></td>
        <td><%= game.opponent_name %></td>
        <td><%= game.date %></td>
        <td><%= game.score %></td>
        <td><%= game.top %></td>
        <td><%= game.flop %></td>
        <td><%= game.status %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

